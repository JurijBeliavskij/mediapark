{% extends 'base.html.twig' %}

{% block body %}
    {{ include('default/navigation_bar.html.twig') }}
    <div class="container">
        <div class="page-header">
            <h1>Create your advertisment</h1>
        </div>
        <form method="post" action="{{ path('advertisment_create') }}">
            <div class="form-group">
                <label for="title">Title</label>
                <input id="title" name="title" placeholder="Enter your advertisment title" class="form-control input-md" required="" type="text" value="{{ title is defined ? title : '' }}">
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea class="form-control" id="description" name="description" placeholder="Add your advertisment description">{{ description is defined ? description : '' }}</textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-default">Create advertisment</button>
            </div>
        </form>
    </div>
{% endblock %}

{% block stylesheets %}
<style>
header {
    padding: 20px 0px;
}
</style>
{% endblock %}